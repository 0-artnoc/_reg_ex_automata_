{
  "groups": [{
    "name": "invalid-utf8",
    "tests": [{
      "options": ["escaped", "invalid-utf8", "no-unicode"],
      "pattern": "\\xFF",
      "input": "\\xFF",
      "full_match": {"start": 0, "end": 1}
    }]
  }, {
    "name": "no-unicode-mixed",
    "tests": [{
      "options": ["escaped", "invalid-utf8"],
      "pattern": "(.+)(?-u)(.+)",
      "input": "\\xCE\\x93\\xCE\\x94\\xFF",
      "full_match": {"start": 0, "end": 5}
    }]
  }, {
    "name": "no-unicode-case",
    "tests": [{
      "options": ["case-insensitive", "no-unicode"],
      "pattern": "a",
      "input": "A",
      "full_match": {"start": 0, "end": 1}
    }, {
      "options": ["case-insensitive", "no-unicode"],
      "pattern": "[a-z]+",
      "input": "AaAaA",
      "full_match": {"start": 0, "end": 5}
    }, {
      "options": ["case-insensitive"],
      "pattern": "[a-z]+",
      "input": "aA\u212AaA",
      "full_match": {"start": 0, "end": 7}
    }, {
      "options": ["case-insensitive", "no-unicode"],
      "pattern": "[a-z]+",
      "input": "aA\u212AaA",
      "full_match": {"start": 0, "end": 2}
    }]
  }, {
    "name": "no-unicode-negate",
    "tests": [{
      "options": [],
      "pattern": "[^a]",
      "input": "δ",
      "full_match": {"start": 0, "end": 2}
    }, {
      "options": ["no-unicode", "invalid-utf8"],
      "pattern": "[^a]",
      "input": "δ",
      "full_match": {"start": 0, "end": 1}
    }]
  }, {
    "name": "no-unicode-dotstar-prefix",
    "tests": [{
      "options": ["escaped", "no-unicode", "invalid-utf8"],
      "pattern": "a",
      "input": "\\xFFa",
      "full_match": {"start": 1, "end": 2}
    }, {
      "options": ["escaped", "invalid-utf8"],
      "pattern": "a",
      "input": "\\xFFa",
      "full_match": {"start": 1, "end": 2}
    }]
  }, {
    "name": "no-unicode-null-bytes",
    "tests": [{
      "options": ["escaped", "no-unicode", "invalid-utf8"],
      "pattern": "[^\\x00]+\\x00",
      "input": "foo\\x00",
      "full_match": {"start": 0, "end": 4}
    }]
  }, {
    "name": "no-unicode",
    "tests": [{
      "options": ["no-unicode"],
      "pattern": "\\w+",
      "input": "aδ",
      "full_match": {"start": 0, "end": 1}
    }, {
      "options": [],
      "pattern": "\\w+",
      "input": "aδ",
      "full_match": {"start": 0, "end": 3}
    }, {
      "options": ["no-unicode"],
      "pattern": "\\d+",
      "input": "1२३9",
      "full_match": {"start": 0, "end": 1}
    }, {
      "pattern": "\\d+",
      "input": "1२३9",
      "full_match": {"start": 0, "end": 8}
    }, {
      "options": ["no-unicode"],
      "pattern": "\\s+",
      "input": " \u1680",
      "full_match": {"start": 0, "end": 1}
    }, {
      "pattern": "\\s+",
      "input": " \u1680",
      "full_match": {"start": 0, "end": 4}
    }]
  }]
}
